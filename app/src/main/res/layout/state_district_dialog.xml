<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:shadowColor="#000"
        android:textColor="#117aa1"
        android:layout_marginTop="30sp"
        android:text="Please fill Your Details"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40sp">

    <android.support.v7.widget.CardView
        android:layout_width="350sp"
        android:layout_gravity="center"
        android:layout_height="350sp"
        app:cardBackgroundColor="#fff"
        android:elevation="40sp"
        app:cardElevation="40sp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stateDialog"
            android:hint="Enter your State"
            android:textColorHint="#000"
            android:textSize="20sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75sp">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/districtDialog"
                android:hint="Enter your District"
                android:textColorHint="#000"
                android:textSize="20sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/centerDialog"
                android:hint="Enter your Center"
                android:textColorHint="#000"
                android:textSize="20sp"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:shadowColor="#000"
            android:elevation="30sp"
            android:layout_width="200sp"
            android:layout_height="60sp"
            android:background="#117aa1"
            android:gravity="center"
            android:id="@+id/saveDetails"
            android:onClick="saveDetails"
            android:text="Save Details"
            android:layout_marginBottom="30sp"
            android:layout_gravity="center|bottom"
            android:textColor="#fff"/>

    </android.support.v7.widget.CardView>

</LinearLayout>

</LinearLayout>