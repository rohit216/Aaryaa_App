<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_marginTop="30sp"
    tools:context="com.example.kanchan.aaryaa_app.BlankFragment">

    <android.support.v7.widget.CardView
        android:layout_width="320sp"
        app:cardCornerRadius="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        app:cardBackgroundColor="#fff"
        android:elevation="30sp"
        app:cardElevation="30sp"
        android:layout_height="190sp">

        <LinearLayout
            android:background="#fff"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Numbers"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#117aa1"
                android:layout_marginTop="10sp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="181   Women HelpLine"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="5sp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100   Police"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="5sp"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="102       Ambulance"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="5sp"
                android:textSize="15sp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1089    Child Abuse HotLine"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="10sp"
                android:textSize="15sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="320sp"
        app:cardCornerRadius="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        app:cardBackgroundColor="#fff"
        android:elevation="30sp"
        app:cardElevation="30sp"
        android:layout_height="210sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Useful Links"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#117aa1"
                android:layout_marginTop="10sp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="181 India"
                android:id="@+id/india"
                android:onClick="open181"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="10sp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/chh"
                android:onClick="open181Chhatisgarh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="181 Chhatisgarh"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="10sp"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/women"
                android:onClick="openWomenAndChildDevelopment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ministry of Women and Child Development"
                android:gravity="center"
                android:textColor="#117aa1"
                android:layout_marginTop="10sp"
                android:textSize="18sp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
