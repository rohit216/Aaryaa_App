<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ImageView
       android:layout_width="match_parent"
       android:layout_marginTop="40sp"
       android:layout_height="180sp"
       android:elevation="40sp"
       android:layout_gravity="center"
       android:src="@drawable/aaryaalogo"/>
   <android.support.v7.widget.CardView
       android:layout_width="320sp"
       android:layout_height="230sp"
       android:layout_marginTop="50sp"
       android:layout_gravity="center"
       app:cardBackgroundColor="#fff"
       android:elevation="30sp"
       app:cardElevation="40sp">

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15sp">
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter your MobNo"
             android:inputType="number"
             android:drawableLeft="@drawable/phone"
             android:textColor="#000"
             android:id="@+id/editUserMobNo"
             android:textColorHint="#000"/>

      </android.support.design.widget.TextInputLayout>

      <Button
          android:layout_width="130sp"
          android:layout_height="50sp"
          android:layout_gravity="center"
          android:gravity="center"
          android:onClick="requestOtp"
          android:layout_marginTop="40sp"
          android:text="Request OTP"
          android:textColor="#fff"
          android:background="#117aa2"/>
      <android.support.design.widget.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:elevation="40sp"
          android:id="@+id/userMobSpeak"
          android:layout_gravity="right|bottom"
          android:src="@drawable/mic"
          android:onClick="userSpeakNow"
          android:layout_marginRight="15sp"
          android:layout_marginBottom="55sp"
          />


   </android.support.v7.widget.CardView>
</LinearLayout>